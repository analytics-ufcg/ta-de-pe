  "bugs": {
    "url": "https://github.com/analytics-ufcg/ta-na-mesa/issues"
  },
  "homepage": "https://github.com/analytics-ufcg/ta-na-mesa#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "express-validator": "^6.4.0",
    "force-ssl-heroku": "^1.0.2",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5"
  },
