{
  "name": "ta-na-mesa",
  "version": "0.1.0",
  "description": "Fiscalize os recursos públicos perto de você e pressione por uma gestão mais eficiente.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "test": "npm test",
    "client": "npm start --prefix client",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client",
    "heroku-cleanup": "mv client/build/$NPM_BUILD_CONFIGURATION/* client/build/",
    "locale": "npm run locale --prefix client"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/analytics-ufcg/ta-na-mesa.git"
  },
  "keywords": [
